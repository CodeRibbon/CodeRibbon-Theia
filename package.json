  "bugs": {
    "url": "https://github.com/CodeRibbon/CodeRibbon-Theia/issues"
  },
  "scripts": {
    "prepare": "lerna run prepare",
    "rebuild:browser": "theia rebuild:browser",
    "rebuild:electron": "theia rebuild:electron",
    "start:browser": "yarn rebuild:browser && yarn --cwd browser-app start",
    "start:browser-ext": "yarn rebuild:browser && yarn --cwd browser-ext-app start",
    "start:electron": "yarn rebuild:electron && yarn --cwd electron-app start",
    "start:electron-ext": "yarn rebuild:electron && yarn --cwd electron-ext-app start",
    "watch": "lerna run --parallel watch"
  },
  "devDependencies": {
    "lerna": "2.4.0"
  },
  "workspaces": [
    "CodeRibbon-Theia",
    "browser-app",
    "browser-ext-app",
    "electron-app",
    "electron-ext-app"
  ]
}
